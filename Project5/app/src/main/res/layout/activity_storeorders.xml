<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            android:text="@string/storeOrderTitle"
            android:layout_width="230dp"
            android:layout_height="41dp" android:id="@+id/storeOrderTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="174dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="674dp" android:layout_marginEnd="179dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" android:textColor="#000000" app:layout_constraintHorizontal_bias="0.784"
            app:layout_constraintVertical_bias="0.0"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="341dp"
            android:layout_height="411dp" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/storeOrderTitle" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="202dp" android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" android:id="@+id/storeOrderRecycler"/>
    <Button
            android:text="@string/cancelStoreOrder"
            android:layout_width="171dp"
            android:layout_height="58dp" android:id="@+id/cancelStoreOrder"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/storeOrderRecycler" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="94dp" app:layout_constraintVertical_bias="0.6"/>
</androidx.constraintlayout.widget.ConstraintLayout>